<!DOCTYPE html>
<html>
  <head>
    <title><%= page_title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <h1><%= page_title %></h1>
    <p>Welcome to <%= page_title %></p>
    <p><a href="/messages">Show All Messages</a></p>

    <form action="<%= message && message._id ? '/messages/' + message._id + '/update' : '/messages/create' %>" method="post">
      <% if (message && message._id) { %>
        <input type="hidden" name="id" value="<%= message._id %>" />
      <% } %>

      <div>
        <label for="category">Category:</label>
        <select name="category" id="category">
          <% categories.forEach(function(cat) { %>
            <option value="<%= cat %>" <%= message && message.category === cat ? 'selected' : '' %>><%= cat %></option>
          <% }) %>
        </select>
      </div>

      <div>
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" value="<%= message ? message.title : '' %>" required minlength="2" />
      </div>

      <div>
        <label for="text">Text:</label>
        <input type="text" id="text" name="text" value="<%= message ? message.text : '' %>" required minlength="7" />
      </div>

      <div>
        <button type="submit">Submit</button>
      </div>
    </form>
  </body>
</html>
